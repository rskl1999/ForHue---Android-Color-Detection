<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools='http://schemas.android.com/tools'
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">


        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            opencv:layout_constraintBottom_toBottomOf="parent"
            opencv:layout_constraintStart_toStartOf="parent"
            opencv:srcCompat="@drawable/cbbg" />

        <ImageView
            android:id="@+id/image_display"
            android:layout_width="404dp"
            android:layout_height="542dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="40dp"
            android:background="#FFFFFF"
            opencv:layout_constraintEnd_toEndOf="parent"
            opencv:layout_constraintHorizontal_bias="0.48"
            opencv:layout_constraintStart_toStartOf="parent"
            opencv:layout_constraintTop_toBottomOf="@+id/imageView9"
            tools:ignore="ImageContrastCheck, ContentDescription" />

        <ImageButton
            android:id="@+id/gallery_butt"
            android:layout_width="86dp"
            android:layout_height="88dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_gallery"
            opencv:layout_constraintBottom_toBottomOf="parent"
            opencv:layout_constraintEnd_toEndOf="@+id/imageView31"
            opencv:layout_constraintHorizontal_bias="0.498"
            opencv:layout_constraintStart_toStartOf="@+id/imageView31"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck,ImageContrastCheck, ContentDescription" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/back_white"
            android:backgroundTint="#000000"
            opencv:layout_constraintBottom_toBottomOf="parent"
            opencv:layout_constraintEnd_toStartOf="@+id/gallery_butt"
            opencv:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck, ContentDescription" />

        <ListView
            android:id="@+id/lang_upl"
            android:layout_width="208dp"
            android:layout_height="168dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/cmbuttonlight"
            android:backgroundTintMode="src_in"
            android:listSelector="#FFD465"
            android:visibility="invisible"
            opencv:layout_constraintBottom_toTopOf="@+id/button2"
            opencv:layout_constraintEnd_toEndOf="@+id/button2"
            tools:ignore="ExtraText">

        </ListView>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            opencv:layout_constraintStart_toStartOf="parent"
            opencv:layout_constraintTop_toTopOf="parent"
            opencv:srcCompat="@drawable/whiterect" />

        <ListView
            android:id="@+id/ttsoptions"
            android:layout_width="206dp"
            android:layout_height="166dp"
            android:background="@drawable/cmbuttonlight"
            android:backgroundTint="#F800BCD4"
            android:listSelector="#A892E7"
            android:textSize="14sp"
            android:visibility="invisible"
            opencv:layout_constraintEnd_toEndOf="@+id/imageButton2"
            opencv:layout_constraintTop_toBottomOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="167dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="I am the Color"
            android:textSize="17sp"
            android:textStyle="italic"
            android:typeface="serif"
            android:visibility="visible"
            opencv:layout_constraintStart_toEndOf="@+id/imageView4"
            opencv:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="C O L O R    N A M E"
            android:textSize="10sp"
            opencv:layout_constraintStart_toEndOf="@+id/imageView4"
            opencv:layout_constraintTop_toTopOf="@+id/imageView9" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_tts"
            opencv:layout_constraintEnd_toEndOf="@+id/imageView9"
            opencv:layout_constraintTop_toTopOf="@+id/imageView9"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="74dp"
            android:layout_height="44dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF5C00"
            android:text="Identify C o l o r"
            android:textSize="10sp"
            opencv:layout_constraintBottom_toBottomOf="@+id/imageView31"
            opencv:layout_constraintEnd_toEndOf="@+id/imageView31"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            opencv:layout_constraintStart_toStartOf="@+id/imageView9"
            opencv:layout_constraintTop_toTopOf="@+id/imageView9"
            opencv:srcCompat="@drawable/coloridlogo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
